
<img id="signup" src="images/food.png">
<h2 id="signupText">Welcome</h2>
<div class="inputBox">
<form class="inputForm" action ="/signup" method="POST">
<div class="fake-input">
    <input class="input" name="username"type ="text" placeholder="Username">
    <input class="input" name="password"type ="password" placeholder="Password">
    <img id="inputLock" src="images/inputLock.png" width=20/>
</div>
</div>

<button id="buttonBlack" type ="submit">Sign up</button>
</form>

<h5 class="registerText">Already have an account?  <a href="/login">Log in</a> </h5>


{{#if errorMessage}}
<p class="errrorMessage">{{errorMessage}}</p>


<script>

  let button = document.getElementById('buttonBlack');
  button.id = "redError";

setTimeout(function(){ 
  button.id = "buttonBlack"
   }, 1000)
</script>
{{/if}}